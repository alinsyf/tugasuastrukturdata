class Node:
    def __init__(self, nama, posisi):
        self.nama = nama
        self.posisi = posisi
        self.next = None


class LinkedList:
    def __init__(self):
        self.head = None

    def tambah(self, nama, posisi):
        node_baru = Node(nama, posisi)
        if not self.head:
            self.head = node_baru
        else:
            current = self.head
            while current.next:
                current = current.next
            current.next = node_baru

    def hapus(self, nama):
        current = self.head
        prev = None
        while current:
            if current.nama == nama:
                if prev:
                    prev.next = current.next
                else:
                    self.head = current.next
                return current
            prev = current
            current = current.next
        return None

    def cari(self, nama):
        current = self.head
        while current:
            if current.nama == nama:
                return current
            current = current.next
        return None

    def traversal(self):
        current = self.head
        if not current:
            print("Data pelamar kosong.")
            return
        while current:
            print(f"- {current.nama} | {current.posisi}")
            current = current.next


class Stack:
    def __init__(self):
        self.data = []

    def push(self, item):
        self.data.append(item)

    def tampil(self):
        if not self.data:
            print("Riwayat penolakan kosong.")
        else:
            print("Riwayat Pelamar Ditolak:")
            for item in reversed(self.data):
                print(f"- {item.nama} | {item.posisi}")


class Queue:
    def __init__(self):
        self.data = []

    def enqueue(self, item):
        self.data.append(item)

    def tampil(self):
        if not self.data:
            print("Antrian interview kosong.")
        else:
            print("Antrian Interview:")
            for item in self.data:
                print(f"- {item.nama} | {item.posisi}")



pelamar = LinkedList()
antrian_interview = Queue()
riwayat_ditolak = Stack()



def tambah_pelamar():
    nama = input("Nama pelamar: ")
    posisi = input("Posisi dilamar: ")
    pelamar.tambah(nama, posisi)
    print("Pelamar berhasil ditambahkan.")


def hapus_pelamar():
    nama = input("Nama pelamar: ")
    hasil = pelamar.hapus(nama)
    if hasil:
        riwayat_ditolak.push(hasil)
        print("Pelamar dihapus dan masuk riwayat.")
    else:
        print("Pelamar tidak ditemukan.")


def cari_pelamar():
    nama = input("Nama pelamar: ")
    hasil = pelamar.cari(nama)
    if hasil:
        print(f"Ditemukan: {hasil.nama} | {hasil.posisi}")
    else:
        print("Pelamar tidak ditemukan.")


def tampil_pelamar():
    print("\nDaftar Pelamar:")
    pelamar.traversal()


def masuk_interview():
    nama = input("Nama pelamar: ")
    data = pelamar.cari(nama)
    if data:
        antrian_interview.enqueue(data)
        print("Pelamar masuk antrian interview.")
    else:
        print("Pelamar tidak ditemukan.")


def tampil_antrian():
    antrian_interview.tampil()


def tampil_riwayat():
    riwayat_ditolak.tampil()


def keluar():
    print("Terima kasih. Program selesai.")
    exit()


commands = {
    "tambah": tambah_pelamar,
    "hapus": hapus_pelamar,
    "cari": cari_pelamar,
    "tampil": tampil_pelamar,
    "interview": masuk_interview,
    "antrian": tampil_antrian,
    "riwayat": tampil_riwayat,
    "keluar": keluar
}



def menu():
    print("\n=== SISTEM RECUITMENT HRD ===")
    print("Perintah tersedia:")
    for cmd in commands:
        print(f"- {cmd}")


while True:
    menu()
    perintah = input(">> ").lower()

    aksi = commands.get(perintah)
    if aksi:
        aksi()
    else:
        print("Perintah tidak dikenali.")
